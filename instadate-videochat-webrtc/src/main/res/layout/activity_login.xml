<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view_login_activity"
    style="@style/MatchParent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/padding_start"
    >
    <TextView
        style="@style/MatchWidth"
        android:paddingTop="@dimen/padding_actionbar"
        android:text="@string/text_welcoming_message"
        />
    <EditText
        android:id="@+id/user_name"
        style="@style/MatchWidth"
        android:paddingTop="@dimen/padding_top"
        android:hint="@string/hint_user_name"
        android:textSize="16sp"
        android:singleLine="true"
        />
    <EditText
        android:id="@+id/user_password"
        style="@style/MatchWidth"
        android:paddingTop="16dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:singleLine="true"
        />
    <LinearLayout
        android:id="@+id/take_pic_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="6dp"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_weight="1"
            android:gravity="center">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/SelectedImage"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@mipmap/ic_launcher"
                app:civ_border_width="5dp"
                app:civ_border_color="@color/white"/>
            </LinearLayout>
        <Button
            android:id="@+id/TakePortrait"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_weight="1"
            android:text="Take Picture"
            android:textColor="@color/white"
            android:background="@drawable/button_green"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/set_birthday_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="6dp"
        android:weightSum="2">
        <TextView
            android:id="@+id/BirthdayLabel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="MM/DD/YYYY"
            android:textColor="@color/green"
            />
        <Button
            android:id="@+id/SetBirthday"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_weight="1"
            android:text="Set Birthday"
            android:textColor="@color/white"
            android:background="@drawable/button_green"
            android:onClick="showDatePickerDialog"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/user_title"
        style="@style/MatchWidth"
        android:paddingTop="@dimen/padding_top"
        android:hint="Title"
        android:textSize="16sp"
        android:singleLine="true"
        />
    <EditText
        android:id="@+id/user_about"
        style="@style/MatchWidth"
        android:inputType="textMultiLine"
        android:lines="8"
        android:paddingTop="16dp"
        android:hint="About"
        android:textSize="16sp"
        android:singleLine="true"
        android:gravity="bottom"
        />
</LinearLayout>